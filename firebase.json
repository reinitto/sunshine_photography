{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/",
        "headers": [
          {
            "key": "Link",
            "value": "</fonts/EB_Garamond/EB_Garamond.woff2>;rel=preload;as=font,</fonts/Mrs_Sheppards/Mrs_Sheppards.woff2>;rel=preload;as=font,</fonts/Open_Sans/Open_Sans.woff2>;rel=preload;as=font,"
          }
        ]
      }
    ]
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
  },
  "firestore": {}
}
